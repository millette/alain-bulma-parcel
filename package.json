{
  "name": "alain-bulma-parcel",
  "version": "0.0.0",
  "lint-staged": {
    "*.{html,js,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "build": "NODE_ENV=production parcel build index.html",
    "clean": "rm -fr dist .cache",
    "start": "parcel index.html",
    "watch": "parcel watch index.html"
  },
  "devDependencies": {
    "bulma": "^0.7.2",
    "husky": "^1.2.1",
    "jquery": "^3.3.1",
    "lint-staged": "^8.1.0",
    "parcel-bundler": "^1.10.3",
    "parcel-plugin-purgecss": "^2.1.0",
    "prettier": "^1.15.3",
    "sass": "^1.15.2"
  },
  "purgecss": {
    "content": [
      "*.html"
    ]
  }
}
